<h2>Edit Task</h2>

<%= form_for @changeset, post_path(@conn, :update, @post), fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= text_input f, :user_id, class: "form-control", required: :true, hidden: :true%>
    <%= error_tag f, :user_id %>
  </div>

  <div class="form-group">
    Enter Task name:
    <%= text_input f, :taskname, class: "form-control" %>
    <%= error_tag f, :taskname %>
  </div>

  <div class="form-group">
    Is the task compelete:
    <%= checkbox f, :completed, class: "checkbox" %>
    <%= error_tag f, :completed %>
  </div>

  <div class="form-group">
    Time Spent of this task:
    <%= number_input f, :hoursspent, class: "form-control", placeholder: "Enter time in minutes"%>
    <%= error_tag f, :hoursspent %>
    <small id="timeHelpBlock" class="form-text text-muted">
      Time Spent must be entered in minutes, and in increments of 15 minutes.
    </small>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>


<span><%= link "Back", to: user_path(@conn, :show, @user) %></span>
